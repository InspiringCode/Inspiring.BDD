<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>8.0</LangVersion>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <Title>Inspiring.BDD</Title>
    <Authors>InspiringCode</Authors>
    <Description>An extension of LightBDD to write tests in a concise and readable manner with an adapter to run tests written for xBehave.net.</Description>
    <PackageProjectUrl>https://github.com/InspiringCode/Inspiring.BDD</PackageProjectUrl>
    <Version>1.0.0-alpha1</Version>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LightBDD.XUnit2" Version="3.5.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

</Project>
